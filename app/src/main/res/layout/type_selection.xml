<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/type1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:elevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/type_img1"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/attractions"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/type_img1"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dp"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="Attractions"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/type2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:elevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/type_img2"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/recreation"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/type_img2"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dp"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="Recreation"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/type4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:elevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/type_img4"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/transport"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/type_img4"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dp"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Transport"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/type3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:elevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/type_img3"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/extras"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/type_img3"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dp"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="Extras"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
</ScrollView>